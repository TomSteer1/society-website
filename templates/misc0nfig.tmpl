{{ define "head" }}
{{ end }}
{{define "content"}}
<section>
	<div class="container misc0grad" id="mainHeaderMisc">
		<img src="/images/misc0nfig_banner_transparent.png" alt="misc0nfig"	class="headerImage" loading="eager" id="misc0nfigLogo"/>
		<p>
		misc0nfig is the annual Warwick Cyber Security Society conference, started in 2025! We host a series of talks and workshops for all levels of cyber knowledge.
        </p>

	</div>
</section>
<section class="bg">
<h1 id="announcement">You can book your tickets for 2025 <a href="https://www.warwicksu.com/venues-events/events/61481/26830/">here!</a></h1>
</section>
<section class="alt-bg">
	<div class="container" id="Sponsors">
	<h2 class="subTitle" id="Sponsors">Conference Sponsors</h2>
	<div class="sponsorContainer clickable">
	{{ range .ConfSponsors }}
		<div class="sponsor" onclick="openSponsors()">
			<img src="{{.Image}}" class="image" />
		</div>
	{{end}}
	</div>
	</div>
</section>
<section>

{{ $occupied := dict }} {{/* create an empty map to track filled cells */}}

<table>
  <thead>
    <tr>
      <th>Time</th>
      {{ range .Rooms }}
        <th>{{ . }}</th>
      {{ end }}
    </tr>
  </thead>
  <tbody>
    {{ $schedule := . }}
    {{ range $i, $time := .Timeslots }}
      <tr>
        <td>{{ $time }}</td>
        {{ range $schedule.Rooms }}
          {{ $room := . }}
          {{ $key := printf "%s|%s" $room $time }}
          {{ if not (index $occupied $key) }}
            {{/* Check if an event starts now */}}
            {{ $found := false }}
            {{ range $schedule.Events }}
              {{ if and (eq .Start $time) (eq .Room $room) }}
                <td rowspan="{{ .RowSpan }}">
                  <strong>{{ .Title }}</strong><br>
                  {{ .Speaker }} ({{ .Company }})
                </td>
                {{ $found = true }}
                
                {{/* Mark upcoming times as occupied */}}
                {{ $startIdx := index $schedule.Timeslots $i }}
                {{ range $j, $nextTime := $schedule.Timeslots }}
                  {{ if and (ge $j $i) (lt $j (add $i .RowSpan)) }}
                    {{ $_ := set $occupied (printf "%s|%s" $room $nextTime) true }}
                  {{ end }}
                {{ end }}
              {{ end }}
            {{ end }}
            {{ if not $found }}
              <td></td>
            {{ end }}
          {{ end }}
        {{ end }}
      </tr>
    {{ end }}
  </tbody>
</table>




</section>

{{end}}