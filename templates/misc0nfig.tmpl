{{ define "head" }}
{{ end }}
{{define "content"}}
<section>
	<div class="container misc0grad" id="mainHeaderMisc">
		<img src="/images/misc0nfig_banner_transparent.png" alt="misc0nfig"	class="headerImage" loading="eager" id="misc0nfigLogo"/>
		<p>
		misc0nfig is the annual Warwick Cyber Security Society conference, started in 2025! We host a series of talks and workshops for all levels of cyber knowledge.
        </p>

	</div>
</section>
<section class="bg">
<h1 id="announcement">You can book your tickets for 2025 <a href="https://www.warwicksu.com/venues-events/events/61481/26830/">here!</a></h1>
</section>
<section class="alt-bg">
	<div class="container" id="Sponsors">
	<h2 class="subTitle" id="Sponsors">Conference Sponsors</h2>
	<div class="sponsorContainer clickable">
	{{ range .ConfSponsors }}
		<div class="sponsor" onclick="openSponsors()">
			<img src="{{.Image}}" class="image" />
		</div>
	{{end}}
	</div>
	</div>
</section>
<section>

<table>
  <thead>
    <tr>
      <th>Time</th>
      {{ range .Rooms }}
        <th>{{ . }}</th>
      {{ end }}
    </tr>
  </thead>
  <tbody>
    {{/* Loop over timeslots */}}
    {{ range $timeIdx, $time := .Timeslots }}
      <tr>
        <td>{{ $time }}</td>

        {{/* Loop over rooms */}}
        {{ range $roomIdx, $room := $.Rooms }}
          {{/* Look for an event that starts now in this room */}}
          {{ $event := "" }}
          {{ $rowspan := 0 }}
          {{ range $.Events }}
            {{ if and (eq .Room $room) (eq .Start $time) }}
              {{ $event = .Title }}
              {{ $rowspan = .RowSpan }}
            {{ end }}
          {{ end }}

          {{/* Check if this cell should be skipped because it's under an active rowspan event */}}
          {{ $skip := false }}
          {{ if not $rowspan }}
            {{/* Look if any event is spanning here from a previous start */}}
            {{ range $.Events }}
              {{ if and (eq .Room $room) (lt .Start $time) (gt .End $time) }}
                {{ $skip = true }}
              {{ end }}
            {{ end }}
          {{ end }}

          {{/* Now render the cell if it's not skipped */}}
          {{ if not $skip }}
            {{ if $rowspan }}
              <td rowspan="{{ $rowspan }}">
                <strong>{{ $event }}</strong>
              </td>
            {{ else }}
              <td></td>
            {{ end }}
          {{ end }}

        {{ end }}
      </tr>
    {{ end }}
  </tbody>
</table>





</section>

{{end}}